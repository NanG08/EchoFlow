<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.MainActivity">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        android:background="@color/surface"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- App Branding -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="28sp"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_tagline"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="2dp" />

        <!-- Language Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSourceLanguage"
                style="@style/Widget.EchoFlow.Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="EN"
                android:textSize="15sp"
                android:textColor="@color/text_primary" />

            <ImageButton
                android:id="@+id/btnSwapLanguages"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginHorizontal="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_sort_by_size"
                app:tint="@color/text_secondary"
                android:contentDescription="@string/tooltip_swap" />

            <Button
                android:id="@+id/btnTargetLanguage"
                style="@style/Widget.EchoFlow.Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="ES"
                android:textSize="15sp"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <!-- Wake Word Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:background="@drawable/rounded_background"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wake Word"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Say &quot;echo&quot; to start"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchWakeWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                app:thumbTint="@color/white"
                app:trackTint="@color/primary" />
        </LinearLayout>
    </LinearLayout>

    <!-- Mode Selector -->
    <HorizontalScrollView
        android:id="@+id/modeSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerSection">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCameraMode"
                style="@style/Widget.EchoFlow.Button.Outlined"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginEnd="10dp"
                android:paddingHorizontal="20dp"
                android:text="@string/mode_camera"
                android:textSize="14sp"
                android:background="@drawable/button_mode_selector"
                android:textColor="@color/button_mode_text_color" />

            <Button
                android:id="@+id/btnPhotoMode"
                style="@style/Widget.EchoFlow.Button.Outlined"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginEnd="10dp"
                android:paddingHorizontal="20dp"
                android:text="@string/mode_photo"
                android:textSize="14sp"
                android:background="@drawable/button_mode_selector"
                android:textColor="@color/button_mode_text_color" />

            <Button
                android:id="@+id/btnSignLanguageMode"
                style="@style/Widget.EchoFlow.Button.Outlined"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:paddingHorizontal="20dp"
                android:text="@string/mode_sign_language"
                android:textSize="14sp"
                android:background="@drawable/button_mode_selector"
                android:textColor="@color/button_mode_text_color" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Content Area with Cards -->
    <ScrollView
        android:id="@+id/contentScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/modeSelector"
        app:layout_constraintBottom_toTopOf="@id/bottomSection">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Camera Preview (Hidden by default) -->
            <FrameLayout
                android:id="@+id/cameraPreview"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_background_dark"
                android:visibility="gone" />

            <!-- Photo Layout (Hidden by default) -->
            <LinearLayout
                android:id="@+id/layoutPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/btnSelectPhoto"
                    style="@style/Widget.EchoFlow.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="@string/action_select_photo" />
            </LinearLayout>

            <!-- Original Text Card with Input -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Original"
                            android:textSize="12sp"
                            android:textColor="@color/text_tertiary"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.05" />

                        <!-- Tab selector for Voice/Text -->
                        <LinearLayout
                            android:id="@+id/inputModeSelector"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/rounded_background"
                            android:padding="2dp">

                            <Button
                                android:id="@+id/chipVoice"
                                style="@style/Widget.Material3.Button.TextButton"
                                android:layout_width="wrap_content"
                                android:layout_height="32dp"
                                android:text="Voice"
                                android:textSize="12sp"
                                android:paddingHorizontal="16dp"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:backgroundTint="@color/primary"
                                android:textColor="@color/white" />

                            <Button
                                android:id="@+id/chipText"
                                style="@style/Widget.Material3.Button.TextButton"
                                android:layout_width="wrap_content"
                                android:layout_height="32dp"
                                android:text="Text"
                                android:textSize="12sp"
                                android:paddingHorizontal="16dp"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:textColor="@color/text_secondary" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Voice Display (default) -->
                    <TextView
                        android:id="@+id/tvOriginalText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:minHeight="120dp"
                        android:text="Say something or tap 'Text' to type..."
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:lineSpacingExtra="4dp"
                        android:visibility="visible" />

                    <!-- Text Input (hidden by default) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutTextInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:visibility="gone"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeColor="@color/primary"
                        app:hintTextColor="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTextInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="120dp"
                            android:gravity="top|start"
                            android:hint="Type text to translate..."
                            android:inputType="textMultiLine|textCapSentences"
                            android:maxLength="500"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:lineSpacingExtra="4dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Character Counter (for text mode) -->
                    <TextView
                        android:id="@+id/tvCharCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="0 / 500"
                        android:textSize="11sp"
                        android:textColor="@color/text_tertiary"
                        android:visibility="gone" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Translated Text Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/primary_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Translation"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:id="@+id/tvConfidence"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="95%"
                            android:textSize="11sp"
                            android:textColor="@color/white"
                            android:visibility="gone" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvTranslatedText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:minHeight="120dp"
                        android:text="..."
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-medium"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Progress Indicator -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:indeterminateTint="@color/primary"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Action Section -->
    <LinearLayout
        android:id="@+id/bottomSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/surface"
        android:elevation="8dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Main Action Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartStop"
            style="@style/Widget.EchoFlow.Button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/action_start"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/primary"
            android:textColor="@color/white"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_mic"
            app:iconGravity="textStart"
            app:iconTint="@color/white"
            android:elevation="4dp" />

        <!-- Secondary Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnHistory"
                style="@style/Widget.EchoFlow.Button.Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tooltip_history"
                android:textSize="14sp"
                app:icon="@android:drawable/ic_menu_recent_history"
                app:iconTint="@color/primary" />

            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:background="@color/divider" />

            <Button
                android:id="@+id/btnSettings"
                style="@style/Widget.EchoFlow.Button.Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tooltip_settings"
                android:textSize="14sp"
                app:icon="@android:drawable/ic_menu_preferences"
                app:iconTint="@color/primary" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
